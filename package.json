{
    "name": "todo-app-v2",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "node --es-module-specifier-resolution=node --loader ts-node/esm ./src/server/server.ts",
        "build": "tsc && vite build",
        "lint": "eslint ./src ./cypress",
        "preview": "vite preview",
        "test:component": "cypress run --component",
        "test:headed": "cypress run --headed",
        "test:headless": "cypress run",
        "test:health": "cypress run --spec './cypress/e2e/health/**'",
        "test:regression": "cypress run --spec './cypress/e2e/regression/**'",
        "test:retry": "cypress run --spec './cypress/e2e/exclude/retry.cy.ts'",
        "test:firefox": "cypress run --browser firefox --headed",
        "test:edge": "cypress run --browser edge --headed",
        "test:reporter": "cypress run --reporter mochawesome",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/core": "11.0.0",
        "@emotion/react": "11.10.5",
        "@emotion/styled": "11.10.5",
        "@mui/icons-material": "5.11.0",
        "@mui/material": "5.11.0",
        "@remix-run/node": "1.9.0",
        "@remix-run/router": "1.1.0",
        "body-parser": "^1.20.2",
        "express": "^4.18.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "6.9.0",
        "storeon": "3.1.5",
        "uuid": "9.0.0"
    },
    "devDependencies": {
        "@cypress/vite-dev-server": "^5.0.5",
        "@types/express": "^4.17.17",
        "@types/node": "^18.15.9",
        "@types/react": "18.0.28",
        "@types/react-dom": "18.0.11",
        "@types/uuid": "9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@vitejs/plugin-react": "3.1.0",
        "cypress": "^12.8.1",
        "eslint": "^8.40.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "mochawesome": "^7.1.3",
        "mochawesome-merge": "^4.3.0",
        "mochawesome-report-generator": "^6.2.0",
        "sass": "^1.60.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3",
        "vite": "4.2.0",
        "wait-on": "7.0.1"
    },
    "engines": {
        "node": "18.16.0"
    },
    "lint-staged": {
        "*.{ts,js,tsx}": [
            "npm run lint -- --fix",
            "git add -A"
        ]
    }
}
