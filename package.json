{
    "name": "todo-app-v2",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "node --es-module-specifier-resolution=node --loader ts-node/esm ./src/server/server.ts",
        "start": "ts-node-esm --experimentalSpecifierResolution node ./src/server/server.ts",
        "build": "tsc && vite build",
        "lint": "eslint ./src ./cypress",
        "preview": "vite preview",
        "test:component": "cypress run --component",
        "test:ui:headed": "cypress run --headed --spec ./cypress/e2e/**",
        "test:ui:headless": "cypress run --spec ./cypress/e2e/**",
        "test:api": "cypress run --spec ./cypress/api/tests/**",
        "test:ui:headed:nonappaction": "cypress run --headed --env non-app-action=true --spec ./cypress/e2e/**",
        "test:ui:headless:nonappaction": "cypress run --env non-app-action=true --spec ./cypress/e2e/**",
        "test:ui:health": "cypress run --spec './cypress/e2e/health/**'",
        "test:ui:regression": "cypress run --spec './cypress/e2e/regression/**'",
        "test:ui:firefox": "cypress run --browser firefox --headed",
        "test:ui:edge": "cypress run --browser edge --headed",
        "test:ui:reporter": "cypress run --reporter mochawesome",
        "test:ui:reporter:nonappaction": "cypress run --reporter mochawesome --env non-app-action=true",
        "prepare": "husky install",
        "wait-on": "wait-on http://localhost:5173"
    },
    "dependencies": {
        "@emotion/core": "11.0.0",
        "@emotion/react": "11.11.3",
        "@emotion/styled": "11.11.0",
        "@mui/icons-material": "5.15.5",
        "@mui/material": "5.15.5",
        "@remix-run/node": "2.5.1",
        "@remix-run/router": "1.14.2",
        "body-parser": "1.20.2",
        "express": "4.18.2",
        "http-status-codes": "2.3.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "6.21.3",
        "uuid": "9.0.1"
    },
    "devDependencies": {
        "@cypress/vite-dev-server": "5.0.7",
        "@types/chai-json-schema": "1.4.9",
        "@types/express": "4.17.21",
        "@types/node": "18.15.9",
        "@types/react": "18.2.48",
        "@types/react-dom": "18.2.18",
        "@types/uuid": "9.0.7",
        "@typescript-eslint/eslint-plugin": "6.19.0",
        "@vitejs/plugin-react": "4.2.1",
        "chai-json-schema": "1.5.1",
        "cypress": "13.6.3",
        "eslint": "8.56.0",
        "eslint-config-standard-with-typescript": "43.0.1",
        "eslint-plugin-cypress": "2.15.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-n": "16.6.2",
        "eslint-plugin-promise": "6.1.1",
        "eslint-plugin-react": "7.33.2",
        "husky": "8.0.3",
        "lint-staged": "15.2.0",
        "mochawesome": "7.1.3",
        "mochawesome-merge": "4.3.0",
        "mochawesome-report-generator": "6.2.0",
        "sass": "1.70.0",
        "ts-node": "10.9.2",
        "typescript": "5.3.3",
        "vite": "5.0.12",
        "wait-on": "7.2.0"
    },
    "engines": {
        "node": "18.16.0"
    },
    "lint-staged": {
        "*.{ts,js,tsx}": [
            "npm run lint -- --fix",
            "git add -A"
        ]
    }
}
